# ========================================
# Application Configuration
# ========================================
APP_NAME="AI ChatBot API"
DEBUG=True
API_V1_PREFIX="/api/v1"

# ========================================
# Database Configuration
# ========================================
# SQLite (default)
DATABASE_URL="sqlite+aiosqlite:///./chatbot.db"

# PostgreSQL (uncomment to use)
# DATABASE_URL="postgresql+asyncpg://user:password@localhost/chatbot"

# ========================================
# Security Configuration
# ========================================
SECRET_KEY="your-secret-key-here-change-in-production-PLEASE-CHANGE-THIS"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ========================================
# AI Model Configuration
# ========================================

# OpenAI Configuration
# Leave OPENAI_API_KEY empty if using Ollama only
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-3.5-turbo"

# Ollama Configuration (Local LLM)
# Make sure Ollama is running: ollama serve
# Download model first: ollama pull llama2
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama2"

# Default AI Provider
# Options: "openai" or "ollama"
DEFAULT_AI_PROVIDER="ollama"

# ========================================
# File Upload Configuration
# ========================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR="./uploads"

# ========================================
# Redis Configuration (Optional)
# ========================================
REDIS_URL="redis://localhost:6379/0"
ENABLE_REDIS=False

